<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".fragment.ThongTinAdminFragment">

    <LinearLayout
    android:background="#D9D9D9"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="130dp">
    </LinearLayout>

<!--Avatar-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgAvatar"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/leader"
            android:layout_gravity="center"
            app:civ_border_width="3dp"
            app:civ_border_color="@color/white"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/idImageUser"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="-15dp"
            android:src="@drawable/plusavatar"
            android:layout_gravity="center"
            app:civ_border_width="3dp"
            app:civ_border_color="@color/white"/>
    </LinearLayout>

<!--TextView Update-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="180dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvNameAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Admin"
            android:textColor="@color/colorXanhSang"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pen"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cập nhập giới thiệu bản thân"
                android:layout_gravity="center"
                android:fontFamily="@font/robotoslabvariablefont_wght"
                android:textColor="#0893E1"
                android:id="@+id/tvUpdate"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </LinearLayout>

<!--Thong tin-->

    <LinearLayout
        android:background="#D9D9D9"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="280dp"
        android:layout_height="130dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#020202"
            android:textStyle="bold"
            android:text="Thông tin cá nhân"/>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/admin2"/>

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Admin"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>






</FrameLayout>