<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1E2E7"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"

            >

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="230dp"
                android:layout_marginLeft="56dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="56dp"
                android:layout_marginBottom="20dp"
                android:background="@null"
                android:backgroundTint="@null"
                android:backgroundTintMode="@null"
                app:lottie_autoPlay="true"
                app:lottie_fileName="adminlogo.json"
                app:lottie_loop="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"

                android:layout_below="@id/logo"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dangNhap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/logo"
                    android:layout_marginLeft="39dp"
                    android:layout_marginTop="10dp"
                    android:text="Đổi mật khẩu"
                    android:textColor="@color/colorXanhSang"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvghichu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dangNhap"
                    android:layout_marginLeft="39dp"
                    android:layout_marginTop="10dp"
                    android:text="Lưu ý : Nhập đúng định dạng"
                    android:textColor="@color/colorText"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvghichu"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/bg_edittext"
                    android:drawableStart="@drawable/ic_baseline_lock_24"
                    android:drawableLeft="@drawable/ic_baseline_lock_24"
                    android:drawablePadding="16dp"
                    android:hint="Password"
                    android:inputType="text"
                    android:paddingLeft="25dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:textColor="@color/colorXanhSang"
                    android:textColorHint="@color/colorXanhSang"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/etPasswordnew1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etUsername"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/bg_edittext"
                    android:drawableStart="@drawable/ic_baseline_lock_24"
                    android:drawableLeft="@drawable/ic_baseline_lock_24"
                    android:drawablePadding="16dp"
                    android:hint="New Password"
                    android:inputType="textPassword"
                    android:paddingLeft="25dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:textColor="@color/colorXanhSang"
                    android:textColorHint="@color/colorXanhSang"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/etPasswordnew2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etUsername"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/bg_edittext"
                    android:drawableStart="@drawable/ic_baseline_lock_24"
                    android:drawableLeft="@drawable/ic_baseline_lock_24"
                    android:drawablePadding="16dp"
                    android:hint="New Password"
                    android:inputType="textPassword"
                    android:paddingLeft="25dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:textColor="@color/colorXanhSang"
                    android:textColorHint="@color/colorXanhSang"
                    android:textSize="14dp" />


                <Button
                    android:id="@+id/btnupdate"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_btn"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:text="Đổi mật khẩu"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:backgroundTint="@null" />
            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>