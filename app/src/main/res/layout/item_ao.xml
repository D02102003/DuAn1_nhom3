<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="185dp"
    android:orientation="vertical"
 android:padding="10dp"
android:background="@drawable/background_them2"
android:layout_margin="15dp"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:src="@drawable/leader"
        android:layout_gravity="center"
        android:id="@+id/imgSanPhamfrg"/>
    <LinearLayout
       android:paddingLeft="10dp"
        android:layout_width="180dp"
        android:layout_height="wrap_content"

        android:background="#B0DADFDF"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"

            android:orientation="vertical">
            <TextView
                android:id="@+id/tenSPfrg"
                android:textSize="12dp"
                android:textStyle="bold"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên Sản phẩm"/>



            <TextView
                android:id="@+id/giaGocSPfrg"
                android:textColor="@color/red2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="giá"/>



        </LinearLayout>

        <ImageView
android:paddingRight="10dp"
            android:id="@+id/imggioHangSPfrg"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:src="@drawable/shopping"
            />
    </LinearLayout>



</LinearLayout>